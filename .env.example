# LOOTER.AI CLONE - Environment Configuration
# Copy this file to .env and update with your actual values

# =====================================================
# TELEGRAM BOT CONFIGURATION
# =====================================================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
ALLOWED_CHAT_IDS=123456789,987654321

# =====================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zedra
DB_USER=zedra
DB_PASSWORD=your_postgres_password_here

# =====================================================
# ENCRYPTION CONFIGURATION
# =====================================================
# IMPORTANT: Change this to a secure 32-character key for production
ENCRYPTION_KEY=generate_random_32_char_key_here

# Multi-Wallet Support (up to 5 wallets) - LEGACY
PRIVATE_KEYS=0x1234...,0x5678...,0x9abc...

# API Keys for Better RPC Performance (Optional)
INFURA_API_KEY=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key
MORALIS_API_KEY=your_moralis_api_key

# Trading Configuration
DEFAULT_SLIPPAGE=0.05
MAX_SLIPPAGE=0.5
DEFAULT_GAS_LIMIT=300000
MEV_PROTECTION=true
FRONT_RUN_PROTECTION=true

# Feature Toggles
FAST_MODE_ENABLED=false
EXPERT_MODE_ENABLED=false
AUTO_SELL_ENABLED=true
MULTI_WALLET_ENABLED=true

# Limits
MAX_WALLETS=5
MAX_SNIPE_ORDERS=10
MAX_LIMIT_ORDERS=20

# Legacy Base Volume Bot Settings (for backward compatibility)
RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
PRIVATE_KEY=your_main_wallet_private_key
TOKEN_ADDRESS=0x_target_token_address_here

